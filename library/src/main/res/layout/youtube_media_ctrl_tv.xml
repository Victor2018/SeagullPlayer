<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_media_ctrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:layoutDirection="ltr">
    <LinearLayout
        android:id="@+id/ll_media_ctrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/color_99000000">
        <TextView
            android:id="@+id/tv_video_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_22"
            tools:text="063-Iverson's crazy score against "/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_100"
            android:paddingRight="@dimen/dp_100"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_youtube_play_pause"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:padding="@dimen/dp_8"
                android:visibility="gone"
                android:src="@mipmap/ic_player_pause"/>
            <TextView
                android:id="@+id/tv_time_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/dp_16"
                android:textColor="@color/white"
                android:text="00:00:00"/>
            <SeekBar
                android:id="@+id/sb_media_progress"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:background="@null"
                android:maxHeight="@dimen/dp_3"
                android:minHeight="@dimen/dp_3"
                android:max="100"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:progressDrawable="@drawable/seek_progress"
                android:thumb="@drawable/seek_thumb" />
            <TextView
                android:id="@+id/tv_video_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="@dimen/dp_18"
                android:textColor="@color/white"
                android:text="00:00:00"/>
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:layout_gravity="center"
        android:indeterminateTint="@color/white"
        android:visibility="gone"/>
</FrameLayout>